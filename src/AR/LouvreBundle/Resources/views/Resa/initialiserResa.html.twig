{%  extends "ARLouvreBundle::layout.html.twig" %}

{% block title %}Réserver - {{ parent() }}{%  endblock %}

{% block resaActive %}class="active"{% endblock %}

{% block titleSection %}Réservez vos billets :{% endblock %}

{% block body %}

    <div class="row">

        <form class="col-sm-6 col-sm-offset-3" {#TODO lien provisoire#}action="{{ path('louvre_resa_completer') }}"  >

            <div class="form-group">
                <i class="glyphicon glyphicon-calendar"></i>
                <label for="reservation-date">Choisissez une date</label>
                {# version un <input class="form-control" name="reservation-date" type="date" > #}
                {# ci dessou version pour illustration uniquement :#}
                {% include 'ARLouvreBundle:Resa:calendar.html.twig' %}

            </div>

            <div class="form-group">
                    <i class="glyphicon glyphicon-barcode"></i>
                    <label for="reservation-type">Choisissez le type de billet</label>
                    <select class="form-control" name="reservation-type">
                        <option>journée</option>
                        <option>demi-journée</option>
                    </select>
            </div>

            <div class="form-group">
                <i class="glyphicon glyphicon-user"></i>
                <label for="reservation-nombre">Nombre de billets souhaité</label>
                <input class="form-control" type="number" name="reservation-nombre">
            </div>
            <button type="submit" class="btn btn-primary">Réserver !</button>
        </form>
    </div>

{% endblock %}