{%  extends "LouvreBundle::layout.html.twig" %}

{% block title %}Réserver - {{ parent() }}{%  endblock %}

{% block resaActive %}class="active"{% endblock %}

{% block titleSection %}Réservez vos billets :{% endblock %}

{% block body %}

    <div class="row">

        <form class="col-sm-6 col-sm-offset-3" {#TODO lien provisoire#}action="{{ path('louvre_resa_fill') }}"  >

            <div class="form-group">
                <div class="col-sm-12">
                    <i class="glyphicon glyphicon-calendar"></i>
                    <label for="reservation-date">Choisissez une date</label>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <input class="form-control" name="reservation-date" type="date" >
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-12">
                    <i class="glyphicon glyphicon-barcode"></i>
                    <label for="reservation-type">Choisissez le type de billet</label>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <select class="form-control" name="reservation-type">
                            <option>journée</option>
                            <option>demi-journée</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-12">
                    <i class="glyphicon glyphicon-user"></i>
                    <label for="reservation-nombre">Nombre de billets souhaité</label>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <input class="form-control" type="number" name="reservation-nombre">
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-default">Réserver !</button>
        </form>
    </div>

{% endblock %}